function clrallList () {
        console.log(document.getElementById("thangs").lastChild.textContent)
        document.getElementById('itemdisplay').value = ''
        arrlist = []
        document.getElementById('enterbox').value = ''
        document.getElementById('thangs').textContent = ''

}


function dltlstList () {
        var last = document.getElementById("thangs").lastChild
        document.getElementById("thangs").removeChild(last);
}


document.getElementById("addbtn").onclick = addtoList
document.getElementById("clrbtn").onclick = clrallList
document.getElementById("dltlst").onclick = dltlstList


