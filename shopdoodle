function addtoList () {
        if (itemval = document.getElementById('enterbox').value != undefined) {
                console.log(itemval = document.getElementById('enterbox').value)
                if (document.getElementById('enterbox').value != ""){
                        var reituno = document.createElement("li")
                        var textnod = document.createTextNode(document.getElementById('enterbox').value)
                        reituno.appendChild(textnod)
                        document.getElementById("thangs").appendChild(reituno)
                        var btnnew = document.createElement("button")
                document.getElementById('enterbox').value = ''
        }
}
}

